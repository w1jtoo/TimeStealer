enum {
	Male,
	Female
}

enum {
	MOVE,
	ATTACK
}

var state = MOVE

const ACCELERATION = 500
const MAX_SPEED = 150
const FRICTION = 500

var velocity = Vector2.ZERO
var sex = Male
var previousTextureId = 0

var attack_cooldown_time = 1000
var next_attack_time = 0
var attack_damage = 30
var attack_playing = false
onready var animationPlayer = $AnimationPlayerMale

onready var animationPlayerMale = $AnimationPlayerMale
onready var animationPlayerFemale = $AnimationPlayerFemale
onready var femaleTextures = [$TextureRect/idle_female, $TextureRect/moving_right_female, $TextureRect/moving_left_female,
$TextureRect/attack_female, $TextureRect/deflect_female, $TextureRect/death_female]
onready var maleTextures = [$TextureRect/idle_male, $TextureRect/moving_right_male, $TextureRect/moving_left_male,
$TextureRect/attack_male, $TextureRect/deflect_male, $TextureRect/death_male]

func _ready():
	var textures = maleTextures if sex == Male else femaleTextures
	if sex != Male:
		animationPlayer = animationPlayerFemale
	textures[previousTextureId].show()

#func _unhandled_input(event):
	#match event.get_class():
		#\"InputEventKey\":
			#if Input.is_action_just_pressed(\"ui_right\"):
				#print(\"attack has pressed\")
				# Check if player can attack
				#var now = OS.get_ticks_msec()
				#if now >= next_attack_time:
					# Play attack animation
					#attack_playing = true
					# var animation = get_animation_direction(last_direction) + \"_attack\"
					#animationPlayer.play(\"attack\")
					# Add cooldown time to current time
					#next_attack_time = now + attack_cooldown_time

func _process(delta):
	match state:
		MOVE:
			move_state(delta)
		
		ATTACK:
			attack_state(delta)


func attack_state(delta):
	$HandShapeAttack.force_raycast_update()
	var target = $HandShapeAttack.get_collider()
	var now = OS.get_ticks_msec()
	if $HandShapeAttack.is_colliding() and now >= next_attack_time:
		next_attack_time = now + 1050
		print(\"ATTACK SUCCESS\")
		#target.hit(attack_damage)
	
	#var input_vector = Vector2.ZERO
	#input_vector.x = Input.get_action_strength(\"ui_right\") - Input.get_action_strength(\"ui_left\")
	#input_vector.y = Input.get_action_strength(\"ui_down\") - Input.get_action_strength(\"ui_up\")
	#input_vector = input_vector.normalized()
	
	#if input_vector.x > 0:
	#	animationPlayer.play(\"attack\")
	#else:
		#var left_attack = $TextureRect/attack_male.flip_h
	
	animationPlayer.play(\"attack\")
	velocity = Vector2.ZERO
	showTexture(3)
	

func attack_animation_finished():
	state = MOVE

func move_state(delta):
	var input_vector = Vector2.ZERO
	input_vector.x = Input.get_action_strength(\"ui_right\") - Input.get_action_strength(\"ui_left\")
	input_vector.y = Input.get_action_strength(\"ui_down\") - Input.get_action_strength(\"ui_up\")
	input_vector = input_vector.normalized()
	
	if input_vector != Vector2.ZERO:
		velocity = velocity.move_toward(input_vector * MAX_SPEED, ACCELERATION * delta)
	else:
		velocity = velocity.move_toward(input_vector, ACCELERATION * delta)
	
	velocity = move_and_slide(velocity)
	
	if velocity != Vector2.ZERO:
		if velocity.x > 0:
			animationPlayer.play(\"move_right\")
			showTexture(1)
		elif velocity.x < 0:
			animationPlayer.play(\"move_left\")
			showTexture(2)
		else:
			animationPlayer.play(\"idle\")
			showTexture(0)
	else:
		animationPlayer.play(\"idle\")
		showTexture(0)
	
	if velocity != Vector2.ZERO:
		$HandShapeAttack.cast_to = velocity.normalized() * 16
	
	if Input.is_action_just_pressed(\"attack\"):
		state = ATTACK

func showTexture(textureId):
	if textureId != previousTextureId:
		var textures = maleTextures if sex == Male else femaleTextures
		textures[previousTextureId].hide()
		textures[textureId].show()
		previousTextureId = textureId
"

